{
    "image": "mcr.microsoft.com/devcontainers/universal:2",
    "customizations": {
        "vscode": {
            "extensions": ["ms-python.python", "bierner.markdown-emoji", "yzhang.markdown-all-in-one", "shd101wyy.markdown-preview-enhanced"],
            "settings": {
                "python.terminal.focusAfterLaunch": true,
                "terminal.integrated.focusAfterRun": "terminal",
                "github.copilot.enable": {"*": false},
                "chat.disableAIFeatures": true,
                "chat.agent.enabled": false,
                "chat.commandCenter.enabled": false,
                "extensions.ignoreRecommendations": true,
                "security.workspace.trust.enabled": false,
                "extensions.autoCheckUpdates": false,
                "extensions.autoUpdate": false,
                "workbench.editorAssociations": {
                    "*.md": "vscode.markdown.preview.editor"
                },
                "workbench.colorTheme": "GitHub Dark Default",
                "workbench.sideBar.location": "right",
                "files.exclude": {
                    "**/.git": true,
                    "**/.svn": true,
                    "**/.hg": true,
                    "**/CVS": true,
                    "**/.DS_Store": true,
                    "**/Thumbs.db": true,
                    "**/.check": true,
                    "**/.task_tests": true,
                    "**/.devcontainer": true,
                    "**/.vscode": true,
                    "**/.gitignore": true,
                    "**/.github": true,
                    "**/.img": true,
                    "**/.scripts": true,
                    "**/.temp": true,
                    "**/.pytest_cache": true,
                    "LICENSE": true
                }
            }
        }
    },
    "postCreateCommand": "pip install pytest",
    "postStartCommand": "sleep 1 && bash -c '.scripts/monitor_extensions.sh' >> /tmp/postStartCommand.log 2>&1"
}